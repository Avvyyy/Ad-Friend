{
  "manifest_version": 3,
  "version": "1.0",
  "name": "Ad Friend",
  "description": "Turn Annoying Adds into your Most Precious Friends",
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_popup": "ad.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/ad.js"]
    }
  ], 
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }, 
  "host_permissions": [
    "http://127.0.0.1/*",
    "https://zenquotes.io/*"
],
"permissions": [
    "storage",
    "activeTab",
    "scripting"
  ]
}
